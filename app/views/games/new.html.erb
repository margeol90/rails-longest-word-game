<h1>New Game</h1>

<div>
  <ul class="inline">
    <% @letters.each do |letter|%>
      <li><%= letter.capitalize %></li>
    <% end %>
  </ul>
</div>
<form action="/score" method="post" class="m-3" data-turbo="false">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <div class="form-group m-2">
    <input type="text" class="form-control" name="word" placeholder="Type the longest word">
  </div>
  <button type="submit" class="btn btn-primary m-2">Submit</button>
</form>
